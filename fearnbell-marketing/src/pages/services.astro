---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Icon } from 'astro-icon/components';

const services = [
  {
    title: 'Website Development',
    description: 'Lightning-fast, SEO-optimized websites built with modern technology',
    features: [
      'Responsive design for all devices',
      'Performance optimization',
      'SEO-ready architecture',
      'Content management system'
    ],
    price: 'From ¬£2,000',
    href: '/services/website-development',
    icon: 'code',
    color: 'blue'
  },
  {
    title: 'SEO Optimization',
    description: 'Data-driven SEO strategies that outrank your competitors',
    features: [
      'Comprehensive keyword research',
      'Technical SEO audit',
      'Content optimization',
      'Monthly reporting'
    ],
    price: 'From ¬£500/month',
    href: '/services/seo-optimization',
    icon: 'search',
    color: 'green'
  },
  {
    title: 'Competitor Research',
    description: 'Deep intelligence on your competition to find opportunities',
    features: [
      'SERP analysis',
      'Keyword gap identification',
      'Backlink research',
      'Content strategy insights'
    ],
    price: 'From ¬£750',
    href: '/services/competitor-research',
    icon: 'chart',
    color: 'purple'
  },
  {
    title: 'Fair Pricing Packages',
    description: 'Transparent, ethical pricing with our 4-payment structure',
    features: [
      'No hidden fees',
      'Flexible payment plans',
      'Clear deliverables',
      'Money-back guarantee'
    ],
    price: 'Custom quotes',
    href: '/services/fair-pricing',
    icon: 'money',
    color: 'amber'
  }
];

const pageTitle = 'Digital Marketing Services | Fearnbell Marketing';
const pageDescription = 'Transparent, results-driven digital marketing services. Website development, SEO optimization, and competitor research with fair pricing.';
const pageKeywords = ['digital marketing services', 'website development', 'SEO services', 'competitor research', 'fair pricing marketing'];
---

<BaseLayout
  title={pageTitle}
  description={pageDescription}
  keywords={pageKeywords}
  structuredDataType="Service"
>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-blue-50 to-white py-20 overflow-hidden">
    <div class="absolute inset-0 opacity-5">
      <img 
        src="https://images.unsplash.com/photo-1460925895917-afdab827c52f?w=1920&h=1080&fit=crop&auto=format" 
        alt="Marketing analytics dashboard" 
        class="w-full h-full object-cover"
      />
    </div>
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-5xl font-bold text-gray-900 mb-6">
          Marketing Services That Actually Work
        </h1>
        <p class="text-xl text-gray-600 mb-8">
          Transparent pricing, proven results, and ethical practices. No BS, just effective digital marketing.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a href="/pricing" class="inline-flex items-center px-8 py-3 border border-transparent text-base font-medium rounded-lg text-white bg-blue-600 hover:bg-blue-700 transition-colors">
            View Pricing
          </a>
          <a href="/contact" class="inline-flex items-center px-8 py-3 border border-gray-300 text-base font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 transition-colors">
            Get Started
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Grid -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-2 gap-8 max-w-6xl mx-auto">
        {services.map((service) => (
          <div class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-shadow p-8 border border-gray-100">
            <div class={`inline-flex items-center justify-center w-16 h-16 rounded-lg bg-${service.color}-100 mb-6`}>
              <div class={`text-${service.color}-600 text-2xl font-bold`}>
                {service.icon === 'code' && '< />'}
                {service.icon === 'search' && 'üîç'}
                {service.icon === 'chart' && 'üìä'}
                {service.icon === 'money' && 'üí∞'}
              </div>
            </div>
            
            <h3 class="text-2xl font-bold text-gray-900 mb-3">
              {service.title}
            </h3>
            
            <p class="text-gray-600 mb-6">
              {service.description}
            </p>
            
            <ul class="space-y-3 mb-6">
              {service.features.map((feature) => (
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-green-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-gray-600">{feature}</span>
                </li>
              ))}
            </ul>
            
            <div class="flex items-center justify-between">
              <span class="text-2xl font-bold text-gray-900">
                {service.price}
              </span>
              <a href={service.href} class={`inline-flex items-center px-6 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-${service.color}-600 hover:bg-${service.color}-700 transition-colors`}>
                Learn More ‚Üí
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Why Choose Fearnbell -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-4xl font-bold text-gray-900 mb-6">
          Why Choose Fearnbell Marketing?
        </h2>
        <p class="text-xl text-gray-600 mb-12">
          We're not your typical marketing agency. Here's what makes us different:
        </p>
        
        <div class="grid md:grid-cols-3 gap-8">
          <div class="text-center">
            <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-blue-100 mb-4">
              <span class="text-2xl">üéØ</span>
            </div>
            <h3 class="text-xl font-semibold mb-2">Data-Driven</h3>
            <p class="text-gray-600">
              Every decision backed by comprehensive research and analytics
            </p>
          </div>
          
          <div class="text-center">
            <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-green-100 mb-4">
              <span class="text-2xl">üíö</span>
            </div>
            <h3 class="text-xl font-semibold mb-2">Ethical Practices</h3>
            <p class="text-gray-600">
              No black-hat tactics, no overcharging, just honest marketing
            </p>
          </div>
          
          <div class="text-center">
            <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-amber-100 mb-4">
              <span class="text-2xl">üìà</span>
            </div>
            <h3 class="text-xl font-semibold mb-2">Proven Results</h3>
            <p class="text-gray-600">
              Real case studies with measurable ROI for every client
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-blue-600">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-4xl font-bold text-white mb-6">
        Ready to Grow Your Business?
      </h2>
      <p class="text-xl text-blue-100 mb-8 max-w-2xl mx-auto">
        Get a free consultation and see how we can help you outrank your competitors with fair, transparent pricing.
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href="/contact" class="inline-flex items-center px-8 py-3 border border-transparent text-base font-medium rounded-lg text-blue-600 bg-white hover:bg-gray-100 transition-colors">
          Get Free Consultation
        </a>
        <a href="/pricing" class="inline-flex items-center px-8 py-3 border border-white text-base font-medium rounded-lg text-white hover:bg-blue-700 transition-colors">
          View Our Pricing
        </a>
      </div>
    </div>
  </section>
</BaseLayout>