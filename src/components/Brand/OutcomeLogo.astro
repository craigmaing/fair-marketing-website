---
export interface Props {
  variant?: 'full' | 'icon' | 'horizontal';
  size?: 'sm' | 'md' | 'lg' | 'xl';
  className?: string;
  invert?: boolean;
}

const { variant = 'horizontal', size = 'md', className = '', invert = false } = Astro.props;

const sizeClasses = {
  sm: 'h-8',
  md: 'h-12',
  lg: 'h-16',
  xl: 'h-20'
};

const sizeClass = sizeClasses[size];
const logoSrc = invert ? '/outcome-logo-white.png' : '/outcome-logo.png';
const invertClass = invert ? 'brightness-0 invert' : '';
---

<div class={`inline-flex items-center ${className}`}>
  {variant === 'icon' ? (
    <!-- Icon only variant -->
    <img
      src={logoSrc}
      alt="Outcome Digital Logo"
      class={`${sizeClass} object-contain ${invertClass}`}
    />
  ) : variant === 'horizontal' ? (
    <!-- Horizontal layout with logo image -->
    <div class="flex items-center gap-2">
      <img
        src={logoSrc}
        alt="Outcome Digital Logo"
        class={`${sizeClass} object-contain ${invertClass}`}
      />
    </div>
  ) : (
    <!-- Full vertical variant (default) -->
    <div class="flex flex-col items-center">
      <img
        src={logoSrc}
        alt="Outcome Digital Logo"
        class={`${sizeClass} object-contain ${invertClass}`}
      />
    </div>
  )}
</div>

<style>
  img {
    max-width: 100%;
    height: auto;
  }

  img:hover {
    opacity: 0.9;
    transition: opacity 0.3s ease;
  }
</style>