---
// Outcome Digital Marketing Logo Component
export interface Props {
  variant?: 'primary' | 'white' | 'dark' | 'mark-only';
  size?: 'sm' | 'md' | 'lg' | 'xl';
  className?: string;
}

const { 
  variant = 'primary', 
  size = 'md',
  className = '' 
} = Astro.props;

const sizeClasses = {
  sm: 'h-8',
  md: 'h-12',
  lg: 'h-16', 
  xl: 'h-20'
};

const logoClass = `${sizeClasses[size]} ${className}`;
---

{variant === 'primary' && (
  <div class={`flex items-center gap-3 ${className}`}>
    <!-- Logo Mark -->
    <div class="relative">
      <svg class={logoClass} viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
        <!-- Bell Shape -->
        <path 
          d="M24 4C19.6 4 16 7.6 16 12V18C16 22.4 12.4 26 8 26V32C8 33.1 8.9 34 10 34H38C39.1 34 40 33.1 40 32V26C35.6 26 32 22.4 32 18V12C32 7.6 28.4 4 24 4Z" 
          fill="url(#bellGradient)"
          stroke="#1e40af"
          stroke-width="2"
        />
        
        <!-- Bell Clapper -->
        <circle cx="24" cy="28" r="3" fill="#dc2626" />
        
        <!-- Transparency Lines -->
        <line x1="20" y1="14" x2="28" y2="14" stroke="white" stroke-width="2" opacity="0.8"/>
        <line x1="18" y1="18" x2="30" y2="18" stroke="white" stroke-width="2" opacity="0.6"/>
        <line x1="20" y1="22" x2="28" y2="22" stroke="white" stroke-width="2" opacity="0.4"/>
        
        <!-- Sound Waves (Transparency) -->
        <path 
          d="M34 12C36 14 36 18 34 20M38 8C42 12 42 20 38 24" 
          stroke="#10b981" 
          stroke-width="2" 
          fill="none"
          opacity="0.7"
        />
        
        <defs>
          <linearGradient id="bellGradient" x1="0%" y1="0%" x2="100%" y2="100%">
            <stop offset="0%" style="stop-color:#3b82f6;stop-opacity:1" />
            <stop offset="50%" style="stop-color:#1e40af;stop-opacity:1" />
            <stop offset="100%" style="stop-color:#1e3a8a;stop-opacity:1" />
          </linearGradient>
        </defs>
      </svg>
    </div>
    
    <!-- Company Name -->
    <div class="flex flex-col">
      <div class="text-2xl font-bold text-gradient tracking-tight">
        Outcome Digital
      </div>
      <div class="text-sm font-medium text-slate-600 -mt-1">
        Marketing
      </div>
    </div>
  </div>
)}

{variant === 'white' && (
  <div class={`flex items-center gap-3 ${className}`}>
    <!-- Logo Mark - White Version -->
    <div class="relative">
      <svg class={logoClass} viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path 
          d="M24 4C19.6 4 16 7.6 16 12V18C16 22.4 12.4 26 8 26V32C8 33.1 8.9 34 10 34H38C39.1 34 40 33.1 40 32V26C35.6 26 32 22.4 32 18V12C32 7.6 28.4 4 24 4Z" 
          fill="rgba(255,255,255,0.9)"
          stroke="rgba(255,255,255,0.8)"
          stroke-width="2"
        />
        <circle cx="24" cy="28" r="3" fill="#10b981" />
        <line x1="20" y1="14" x2="28" y2="14" stroke="rgba(255,255,255,0.6)" stroke-width="2"/>
        <line x1="18" y1="18" x2="30" y2="18" stroke="rgba(255,255,255,0.4)" stroke-width="2"/>
        <line x1="20" y1="22" x2="28" y2="22" stroke="rgba(255,255,255,0.3)" stroke-width="2"/>
        <path 
          d="M34 12C36 14 36 18 34 20M38 8C42 12 42 20 38 24" 
          stroke="rgba(255,255,255,0.7)" 
          stroke-width="2" 
          fill="none"
        />
      </svg>
    </div>
    
    <div class="flex flex-col">
      <div class="text-2xl font-bold text-white tracking-tight">
        Outcome Digital
      </div>
      <div class="text-sm font-medium text-white/80 -mt-1">
        Marketing
      </div>
    </div>
  </div>
)}

{variant === 'dark' && (
  <div class={`flex items-center gap-3 ${className}`}>
    <!-- Logo Mark - Dark Version -->
    <div class="relative">
      <svg class={logoClass} viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path 
          d="M24 4C19.6 4 16 7.6 16 12V18C16 22.4 12.4 26 8 26V32C8 33.1 8.9 34 10 34H38C39.1 34 40 33.1 40 32V26C35.6 26 32 22.4 32 18V12C32 7.6 28.4 4 24 4Z" 
          fill="#1e293b"
          stroke="#334155"
          stroke-width="2"
        />
        <circle cx="24" cy="28" r="3" fill="#3b82f6" />
        <line x1="20" y1="14" x2="28" y2="14" stroke="#64748b" stroke-width="2"/>
        <line x1="18" y1="18" x2="30" y2="18" stroke="#64748b" stroke-width="2" opacity="0.7"/>
        <line x1="20" y1="22" x2="28" y2="22" stroke="#64748b" stroke-width="2" opacity="0.5"/>
        <path 
          d="M34 12C36 14 36 18 34 20M38 8C42 12 42 20 38 24" 
          stroke="#10b981" 
          stroke-width="2" 
          fill="none"
          opacity="0.8"
        />
      </svg>
    </div>
    
    <div class="flex flex-col">
      <div class="text-2xl font-bold text-slate-900 tracking-tight">
        Outcome Digital
      </div>
      <div class="text-sm font-medium text-slate-600 -mt-1">
        Marketing
      </div>
    </div>
  </div>
)}

{variant === 'mark-only' && (
  <svg class={logoClass} viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
    <path 
      d="M24 4C19.6 4 16 7.6 16 12V18C16 22.4 12.4 26 8 26V32C8 33.1 8.9 34 10 34H38C39.1 34 40 33.1 40 32V26C35.6 26 32 22.4 32 18V12C32 7.6 28.4 4 24 4Z" 
      fill="url(#bellGradientMark)"
      stroke="#1e40af"
      stroke-width="2"
    />
    <circle cx="24" cy="28" r="3" fill="#dc2626" />
    <line x1="20" y1="14" x2="28" y2="14" stroke="white" stroke-width="2" opacity="0.8"/>
    <line x1="18" y1="18" x2="30" y2="18" stroke="white" stroke-width="2" opacity="0.6"/>
    <line x1="20" y1="22" x2="28" y2="22" stroke="white" stroke-width="2" opacity="0.4"/>
    <path 
      d="M34 12C36 14 36 18 34 20M38 8C42 12 42 20 38 24" 
      stroke="#10b981" 
      stroke-width="2" 
      fill="none"
      opacity="0.7"
    />
    
    <defs>
      <linearGradient id="bellGradientMark" x1="0%" y1="0%" x2="100%" y2="100%">
        <stop offset="0%" style="stop-color:#3b82f6;stop-opacity:1" />
        <stop offset="50%" style="stop-color:#1e40af;stop-opacity:1" />
        <stop offset="100%" style="stop-color:#1e3a8a;stop-opacity:1" />
      </linearGradient>
    </defs>
  </svg>
)}