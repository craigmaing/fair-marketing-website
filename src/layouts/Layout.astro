---
import '../styles/global.css';

export interface Props {
  title: string;
  description?: string;
  keywords?: string;
}

const { title, description = "Outcome Digital Marketing - Transparent costs, real results, no hidden fees", keywords = "outcome digital marketing, transparent marketing, ethical marketing uk" } = Astro.props;

const canonicalURL = Astro.site ? new URL(Astro.url.pathname, Astro.site) : Astro.url;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Meta Tags -->
    <title>{title} | Outcome Digital Marketing</title>
    <link rel="canonical" href={canonicalURL} />
    <meta name="robots" content="index, follow" />
    <meta name="author" content="Outcome Digital Marketing Ltd" />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={`${title} | Outcome Digital Marketing`} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:site_name" content="Outcome Digital Marketing" />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={`${title} | Outcome Digital Marketing`} />
    <meta name="twitter:description" content={description} />
    
    <!-- Critical CSS Inline for Above-the-Fold Content -->
    <style>
      /* Critical above-the-fold styles */
      :root {
        --primary: #1e3a8a;
        --secondary: #3b82f6;
        --accent: #10b981;
        --warning: #f59e0b;
        --text-primary: #0f172a;
        --text-secondary: #475569;
        --bg-light: #f8fafc;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      html {
        font-family: 'Inter', system-ui, sans-serif;
        line-height: 1.5;
        -webkit-text-size-adjust: 100%;
        scroll-behavior: smooth;
      }

      body {
        background: #fff;
        color: var(--text-primary);
        min-height: 100vh;
      }

      .container {
        max-width: 1280px;
        margin: 0 auto;
        padding: 0 1rem;
      }

      /* Critical hero styles */
      .text-gradient {
        background: linear-gradient(135deg, var(--primary), var(--accent));
        -webkit-background-clip: text;
        background-clip: text;
        -webkit-text-fill-color: transparent;
      }

      .btn {
        display: inline-flex;
        align-items: center;
        padding: 0.75rem 1.5rem;
        border-radius: 0.5rem;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s;
      }

      .btn-primary {
        background: var(--primary);
        color: white;
      }

      .btn-secondary {
        background: transparent;
        color: var(--primary);
        border: 2px solid var(--primary);
      }

      /* Prevent layout shift */
      img {
        max-width: 100%;
        height: auto;
        display: block;
      }

      /* Critical animation for initial load */
      @keyframes fadeInUp {
        from {
          opacity: 0;
          transform: translateY(20px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .animate-fadeInUp {
        animation: fadeInUp 0.6s ease-out forwards;
      }
    </style>

    <!-- Fonts (Preload critical font weights) -->
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap" as="style" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&family=Manrope:wght@400;500;600;700;800&display=swap"
      rel="stylesheet"
      media="print"
      onload="this.media='all'"
    />
    <noscript>
      <link
        href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&family=Manrope:wght@400;500;600;700;800&display=swap"
        rel="stylesheet"
      />
    </noscript>

    <!-- Tailwind CSS is handled by Astro's built-in integration -->
    
    <!-- Schema.org LocalBusiness -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "LocalBusiness",
      "name": "Outcome Digital Marketing Ltd",
      "description": "Digital marketing agency with transparent costs and ethical practices",
      "url": "https://outcomedigital.co.uk",
      "telephone": "+44-789-012-3456",
      "address": {
        "@type": "PostalAddress",
        "addressRegion": "UK",
        "addressCountry": "UK"
      },
      "priceRange": "££",
      "paymentAccepted": "4-payment plan available",
      "additionalType": "https://schema.org/MarketingCompany",
      "specialty": [
        "Transparent Pricing",
        "Fair Payment Terms",
        "Ethical Marketing Practices",
        "Small Business Marketing"
      ]
    }
    </script>
  </head>
  <body class="font-inter antialiased bg-white text-slate-900 selection:bg-blue-100 selection:text-blue-900">
    <slot />
    
    <!-- Performance monitoring -->
    <script>
      // Core Web Vitals tracking
      if ('web-vital' in window) {
        // Track performance metrics
        console.log('Performance tracking enabled');
      }
    </script>
  </body>
</html>