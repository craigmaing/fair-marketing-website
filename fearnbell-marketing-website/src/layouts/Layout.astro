---
import '../styles/global.css';

export interface Props {
  title: string;
  description?: string;
  keywords?: string;
}

const { title, description = "Fair Pricing Marketing Agency - Transparent costs, real results, no hidden fees", keywords = "fair pricing marketing agency, transparent marketing, ethical marketing london" } = Astro.props;

const canonicalURL = Astro.site ? new URL(Astro.url.pathname, Astro.site) : Astro.url;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Meta Tags -->
    <title>{title} | Fearnbell Marketing</title>
    <link rel="canonical" href={canonicalURL} />
    <meta name="robots" content="index, follow" />
    <meta name="author" content="Fearnbell Marketing" />
    
    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={`${title} | Fearnbell Marketing`} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:site_name" content="Fearnbell Marketing" />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={`${title} | Fearnbell Marketing`} />
    <meta name="twitter:description" content={description} />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&family=Manrope:wght@400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
    
    <!-- Tailwind CSS is handled by Astro's built-in integration -->
    
    <!-- Schema.org LocalBusiness -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "LocalBusiness",
      "name": "Fearnbell Marketing",
      "description": "Fair pricing marketing agency with transparent costs and ethical practices",
      "url": "https://fearnbellmarketing.com",
      "telephone": "+44-20-XXXX-XXXX",
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "London",
        "addressCountry": "UK"
      },
      "priceRange": "££",
      "paymentAccepted": "4-payment plan available",
      "additionalType": "https://schema.org/MarketingCompany",
      "specialty": [
        "Transparent Pricing",
        "Fair Payment Terms", 
        "Ethical Marketing Practices",
        "Small Business Marketing"
      ]
    }
    </script>
  </head>
  <body class="font-inter antialiased bg-white text-slate-900 selection:bg-blue-100 selection:text-blue-900">
    <slot />
    
    <!-- Performance monitoring -->
    <script>
      // Core Web Vitals tracking
      if ('web-vital' in window) {
        // Track performance metrics
        console.log('Performance tracking enabled');
      }
    </script>
  </body>
</html>